---
import HeaderNav from "@/components/HeaderNav.astro";
import HeaderMeta from "@/components/HeaderMeta.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import Footer from "@/components/Footer.astro";
import contributors from "@/data/contributors.json";
import { SITE_TITLE, SITE_DESCRIPTION, CDN_URL } from "@/consts";
import { Content as About } from "../../README.md";
---

<html lang="zh-CN">
  <head>
    <HeaderMeta title={`关于 - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href={`${CDN_URL}/assets/gfm-fba346.css`} />
  </head>

  <body>
    <HeaderNav />

    <main class="flex flex-col items-center h-full">
      <div class="max-w-5xl w-full">
        <div class="rounded-lg shadow-lg p-4">
          <div class="mt-4 markdown-body">
            <About />
            <h2>贡献者名单</h2>
            <p class="flex space-x-1 overflow-hidden">
              {
                contributors.map((contributor) => (
                  <a
                    href={contributor.html_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    title={contributor.login}
                  >
                    <img
                      src={contributor.avatar_url}
                      alt={contributor.login}
                      class="inline-block h-8 w-8 rounded-full ring-2 ring-transparent"
                    />
                  </a>
                ))
              }
            </p>
          </div>
        </div>
      </div>
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
